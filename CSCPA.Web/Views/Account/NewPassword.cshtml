@{
    Layout = "~/Views/Shared/_Account.cshtml";
    ViewBag.Title = "New Password";
}
@model CSCPA.Web.Models.NewPasswordViewModel
<div class="card">
    <div class="card-body">
        @{await Html.RenderPartialAsync("~/Views/Shared/_ShowAlert1.cshtml");}
        <h3 class="text-center mt-0 m-b-15">
            <a href="index.html" class="logo logo-admin"><img src="~/images/logo.png" height="30" alt="logo"></a>
        </h3>

        <h4 class="text-muted text-center font-18"><b>Reset Password</b></h4>

        <div class="p-3">
            <form class="form-horizontal m-t-20" asp-action="NewPassword" asp-controller="Account" method="post">
                @Html.HiddenFor(m => m.Email)
                @Html.HiddenFor(m => m.Token)
                <div class="form-group row">
                    <div class="col-12">
                        <div>
                            <input type="password" id="pass2" class="form-control" asp-for="Password" placeholder="Enter new password">
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                        </div>
                        <div class="m-t-10">
                            <input type="password" class="form-control" asp-for="ConfirmPassword" data-parsley-equalto="#pass2" placeholder="Re-Type Password">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error" })
                        </div>
                    </div>
                </div>

                <div class="form-group text-center row m-t-20">
                    <div class="col-12">
                        <button class="btn btn-info btn-block waves-effect waves-light" type="submit">Reset Password</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

