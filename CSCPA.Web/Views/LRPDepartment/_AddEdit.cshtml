@using CSCPA.Model
@Html.AntiForgeryToken()

@(Html.DevExtreme().Form<LRPDepartmentAddEditModel>
    ().ID("LRPDepartmentAddEditDevForm")
    .ColCount(2)
    .Items(groupItems =>
    {
        groupItems.AddSimpleFor(m => m.ObjectUID).Visible(false);

        groupItems.AddSimpleFor(m => m.Name).IsRequired(true);
        groupItems.AddSimpleFor(m => m.DepartmentNo)
        .Label(l => l.Text("Department Number"))
        .IsRequired(true);

        groupItems.AddSimpleFor(m => m.Description)
        .Editor(e => e
        .TextArea()
        .Height(100))
        .ColSpan(2);

        groupItems.AddButton()
        .HorizontalAlignment(HorizontalAlignment.Left)
        .ButtonOptions(b => b.Text("Save")
        .Type(ButtonType.Success)
        .UseSubmitBehavior(false)
        .OnClick("lrpDepartmentAddEdit.save")
        );
    })
    .FormData(Model)
    )