@using CSCPA.Model
@Html.AntiForgeryToken()

@(Html.DevExtreme().Form<LRPVendorClassAddEditModel>
    ().ID("LRPVendorClassAddEditDevForm")
    .ColCount(1)
    .Items(groupItems =>
    {
        groupItems.AddSimpleFor(m => m.ObjectUID).Visible(false);

        groupItems.AddSimpleFor(m => m.VendorClassNo).IsRequired(true);
                  groupItems.AddSimpleFor(m => m.Description)
      .ColSpan(2)
      .Editor(e => e
      .TextArea()
      .Height(140)
      );

        groupItems.AddButton()
        .ButtonOptions(b => b.Text("Save")
        .Type(ButtonType.Success)
        .UseSubmitBehavior(false)
        .OnClick("lrpVendorClassAddEdit.save")
        );
    })
    .FormData(Model)
    )
