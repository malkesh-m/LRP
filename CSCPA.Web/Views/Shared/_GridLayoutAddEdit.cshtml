@using CSCPA.Model
@Html.AntiForgeryToken()
@{
    Layout = null;
}
<div id="GridLayoutAddEdit" class="modal modal-fix-height fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="float:left"></h4>
                <button type="button" class="close float-right" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @(Html.DevExtreme().TextBox().ID("txtGridId").Visible(false))
                @(Html.DevExtreme().TextBox().ID("gridId").Visible(false))
                <div class="row">
                    <div class="col-md-4">
                        Layout Name @(Html.DevExtreme().TextBox().ID("txtLayoutname"))
                    </div>
                    <div class="col-md-4">
                        Is Public  @(Html.DevExtreme().CheckBox().ID("checkPublic"))
                    </div>
                </div>
                <div class="row" style="margin-top:6px">
                    <div class="col-md-4">
                        @(Html.DevExtreme().Button()
                            .Text("Save")
                            .Type(ButtonType.Success)
                             .OnClick("common.createLayout")
                        )
                    </div>
                </div>
            </div>
            </div>
    </div>
</div>
